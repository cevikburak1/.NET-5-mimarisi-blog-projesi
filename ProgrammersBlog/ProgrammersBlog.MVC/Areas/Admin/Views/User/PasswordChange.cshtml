@model ProgrammersBlog.Entities.Dtos.UserPasswordChangeDto

@{ 
    Layout = "_Layout";
    ViewBag.Title = " Şifre Yenileme Ekranı ";
}


<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key"></span>Şifre Yenileme Ekranı</h4>
            </div>
            <div class="card-body">
                <form asp-controller="User" asp-action="PasswordChange" method="post">

                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                
                    <div class="form-group">
                        <label asp-for="CurrendPassword"></label>
                        <input type="password" class="form-control" asp-for="CurrendPassword" placeholder="Lütfen, Şuan ki Şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="CurrendPassword"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input type="password" class="form-control" asp-for="NewPassword" placeholder="Lütfen, Yeni Şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input type="password" class="form-control" asp-for="RepeatPassword" placeholder="Lütfen, Yeni Şifrenizin Tekrarını giriniz." />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span>Kaydet</button>
                        <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span>İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>